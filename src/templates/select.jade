div
    div.row.header
        div.col-xs-12
            div.meta
                div.title Select
    div.page
        div.panel
            div.row
                div.col-sm-12
                    div(class="form-group")
                        h3 All input fields should be navigable using TAB

                        div.col-sm-6
                            p
                                h4 Username
                                input(type="text", ng-model="username", placeholder="Username", class="form-control", autofocus)

                            p
                                h4 Simple Select (empty)
                                ui-select(ng-model="myAge1", tabindex="0", tribe-select-open-on-focus, tribe-select-prevent-tab, tribe-select-fetch-on-open)
                                    ui-select-match(placeholder="Select Age...")
                                        span {{$select.selected}}
                                    ui-select-choices(repeat="age in (ages | filter: $select.search)", refresh="updateAges()")
                                        span(ng-bind-html="age | highlight: $select.search")
                            p
                                h4 Simple Select (with default value)
                                ui-select(ng-model="myAge11", tabindex="0", tribe-select-open-on-focus, tribe-select-prevent-tab)
                                    ui-select-match(placeholder="Select Age...")
                                        span {{$select.selected}}
                                    ui-select-choices(repeat="age in (ages | filter: $select.search)")
                                        span(ng-bind-html="age | highlight: $select.search")
                            p
                                h4 Select multiple
                                ui-select(multiple ng-model="myAge2", tabindex="0", tribe-select-open-on-focus, tribe-select-prevent-tab)
                                    ui-select-match(placeholder="Select Age...")
                                        span {{$item}}
                                    ui-select-choices(repeat="age in (ages | filter: $select.search)")
                                        span(ng-bind-html="age | highlight: $select.search")
                            p
                                h4 Select multiple (with 1500 ms delay to open on-focus)
                                ui-select(multiple ng-model="myAge3", tabindex="0", tribe-select-open-on-focus, tribe-select-prevent-tab, open-on-focus-delay="1500")
                                    ui-select-match(placeholder="Select Age...")
                                        span {{$item}}
                                    ui-select-choices(repeat="age in (ages | filter: $select.search)")
                                        span(ng-bind-html="age | highlight: $select.search")

                            p
                                h4 Select multiple (with 1500 ms delay to open on-focus, only the first time that it opens)
                                ui-select(multiple ng-model="myAge3", tabindex="0", tribe-select-open-on-focus, tribe-select-prevent-tab, open-on-focus-delay="1500", open-on-focus-delay-once="true")
                                    ui-select-match(placeholder="Select Age...")
                                        span {{$item}}
                                    ui-select-choices(repeat="age in (ages | filter: $select.search)")
                                        span(ng-bind-html="age | highlight: $select.search")

                            p
                                h4 Select simple with tagging
                                ui-select(ng-model="myAge3", tagging="taggingCallback", tagging-label="false", reset-search-input="false", tabindex=0, tribe-select-open-on-focus, tribe-select-prevent-tab)
                                    ui-select-match(placeholder="Select Age...")
                                        span {{$select.selected}}
                                    ui-select-choices(repeat="age in (ages | filter: $select.search)", allow-clear="true")
                                        span(ng-bind-html="age | highlight: $select.search")
                            p
                                h4 Select multiple with tagging
                                tribe-tags(ng-model="myAge3")

                            p
                                h4 Email
                                input(type="text", ng-model="email", placeholder="Email", class="form-control")
